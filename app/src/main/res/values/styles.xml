    <!-- 红点样式 -->
    <style name="txt_red_dot">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingLeft">1dp</item>
