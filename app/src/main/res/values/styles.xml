    <!-- 群聊私信样式 -->
    <style name="group_user_letter">
        <item name="android:layout_width">@dimen/px_120</item>
        <item name="android:layout_height">@dimen/px_56</item>
        <item name="android:layout_alignParentRight">true</item>
