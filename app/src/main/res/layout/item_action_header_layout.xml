<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_400">

            <ImageView
                android:id="@+id/img_action_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_action_bg_url" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/px_20"
                android:layout_marginRight="@dimen/px_24"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_action_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_24"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="@dimen/px_150"
                    android:layout_height="@dimen/px_150"
                    android:background="@drawable/shape_action_header_img">

                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/px_144"
                        android:layout_height="@dimen/px_144"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:cardCornerRadius="@dimen/px_10">

                        <ImageView
                            android:id="@+id/img_action_me_header"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_default" />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_8"
            android:background="#fff6f6f6" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <RelativeLayout
            android:id="@+id/rl_action_talk"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_80"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_24"
                android:drawableLeft="@mipmap/ic_action_camera"
                android:gravity="center"
                android:text=" 说点什么吧..."
                android:textColor="@color/txt_color_999999"
                android:textSize="@dimen/px_28" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <RelativeLayout
            android:id="@+id/action_msg_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_96"
            android:background="#fff6f6f6"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/layout_action_message"
                android:layout_width="@dimen/px_320"
                android:layout_height="@dimen/px_84"
                android:layout_centerInParent="true"
                android:background="#ffd8d8d8"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_collect_header"
                        android:layout_width="@dimen/px_60"
                        android:layout_height="@dimen/px_60" />

                    <TextView
                        android:id="@+id/txt_action_collect_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_16"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/px_24" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>