<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/setting_bg"
    tools:context=".activities.applet.AppletSeverActivity">
    <include
        layout="@layout/titlebar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="635dp"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_30"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_applet_server"/>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_110"
        android:gravity="center_vertical"
        android:background="@color/white">
        <TextView
            android:id="@+id/kf_server"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="@dimen/px_38"
            android:gravity="center"
            android:textColor="@color/txt_color_666666"
            android:text="@string/applet_name10"/>
        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_58"
            android:background="#dddddd"/>
        <TextView
            android:id="@+id/applet_pal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/color_dd362b"
            android:gravity="center"
            android:textSize="@dimen/px_38"
            android:text="@string/applet_name11"/>

    </LinearLayout>
</LinearLayout>