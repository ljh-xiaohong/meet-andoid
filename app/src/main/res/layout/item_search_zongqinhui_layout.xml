<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="68.0dip"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_clan_picture"
        android:layout_width="@dimen/px_108"
        android:layout_height="@dimen/px_108"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_clan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="名字"
            android:textColor="#ff171717"
            android:textSize="@dimen/px_32" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/clan_km"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_4"
                android:background="@drawable/shape_zongqinhui_txt_bg"
                android:drawableLeft="@mipmap/ic_dingwei_hong"
                android:paddingLeft="@dimen/px_14"
                android:paddingRight="@dimen/px_14"
                android:text=" 10km"
                android:textColor="@color/color_ab3a34"
                android:textSize="@dimen/px_28" />

            <TextView
                android:id="@+id/clan_ren_cont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_14"
                android:background="@drawable/shape_zongqinhui_txt_bg"
                android:paddingLeft="@dimen/px_14"
                android:paddingRight="@dimen/px_14"
                android:text="110人"
                android:textColor="@color/color_ab3a34"
                android:textSize="@dimen/px_28" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>