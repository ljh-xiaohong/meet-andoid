<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="65dp">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        >

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/item_surname_rank_tv_ranknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black_333333"
            android:textSize="13sp"
            />

        <ImageView

            android:id="@+id/item_surname_rank_iv_medal"
            android:layout_width="20dp"
            android:layout_height="27dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_surname_rank_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ll"

        android:textColor="@color/color_black_333333"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/item_surname_rank_tv_Pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/item_surname_rank_tv_name"

        android:textColor="@color/color_grey_999999"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="功德"
            android:textColor="@color/color_grey_999999"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_surname_rank_tv_meritnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/color_black_333333"
            android:textSize="13sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e5e5e5"/>

</RelativeLayout>
