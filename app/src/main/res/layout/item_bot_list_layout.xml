<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/px_30">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/px_30"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="@dimen/px_110"
                android:layout_height="@dimen/px_110"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_mine_card_bg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="3.0dip"
                app:cardElevation="0.0dip">
            <ImageView
                android:id="@+id/item_bot_logo"
                android:layout_width="@dimen/px_110"
                android:layout_height="@dimen/px_110"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_default"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/bot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_232323"
                android:layout_marginTop="@dimen/px_30"
                android:textSize="@dimen/px_30"
                android:layout_gravity="center_horizontal"
                android:text="约见科技"/>
            <TextView
                android:id="@+id/bot_job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/txt_color_999999"
                android:layout_marginTop="@dimen/px_20"
                android:textSize="@dimen/px_30"
                android:layout_gravity="center_horizontal"
                android:text="约见科技"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_1"
            android:background="@color/setting_bg"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/px_104"
                    android:layout_height="@dimen/px_104"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="0.0dip">
                <ImageView
                    android:id="@+id/item_bot_photo"
                    android:layout_width="@dimen/px_104"
                    android:layout_height="@dimen/px_104"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_default"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_104"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/itme_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="@dimen/px_30"
                        android:textColor="@color/color_232323"
                        android:text="名字"/>
                    <TextView
                        android:id="@+id/item_bot_problems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/px_30"
                        android:textColor="@color/color_232323"
                        android:text="Ta需要：项目策划"/>

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/itme_bot_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/px_28"
                android:textColor="@color/txt_color_999999"
                android:enabled="true"
                android:text="2018-10-10" />

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_10"
        android:background="@color/setting_bg"/>

    <View
        android:id="@+id/item_bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_140"
        android:visibility="gone"/>
</LinearLayout>
