<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.yuejian.meet.widgets.VideoPlayer
        android:id="@+id/activity_video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.yuejian.meet.widgets.VideoPlayer>

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/activity_video_progress"
        android:layout_width="32.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:indicator="BallSpinFadeLoader"
        app:indicator_color="#ffb6b6b6" />

</FrameLayout>