<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#F2F5F7"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_nav_return"
            android:padding="12dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:text="精准推送设置"
            android:textColor="#333333"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
    </RelativeLayout>

     <RelativeLayout
         android:layout_width="match_parent"
         android:background="#FFFFFF"
         android:layout_height="55dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="12dp"
             android:text="指定地点推送"
             android:textColor="#ff333333"
             android:textSize="15sp"/>

         <TextView
             android:id="@+id/select_city"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:drawableRight="@mipmap/icon_list_more"
             android:layout_marginRight="12dp"
             android:text="珠海"
             android:textColor="#ff999999"
             android:textSize="15sp"
             />
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:background="#FFFFFF"
         android:layout_height="55dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="12dp"
             android:text="关注行业"
             android:textColor="#ff333333"
             android:textSize="15sp"/>

         <TextView
             android:id="@+id/select_industry"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:drawableRight="@mipmap/icon_list_more"
             android:layout_marginRight="12dp"
             android:text="电商、金融、互联网"
             android:textColor="#ff999999"
             android:textSize="15sp"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:background="#FFFFFF"
         android:layout_height="55dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="12dp"
             android:text="推荐行业相关用户"
             android:textColor="#ff333333"
             android:textSize="15sp"/>
         <Switch
             android:id="@+id/recommended_user_switch"
             android:layout_width="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:layout_marginRight="12dp"
             android:checked="true"
             android:thumb="@drawable/switch_thumb"
             android:track="@drawable/switch_track"
             android:layout_height="wrap_content"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_width="match_parent"
         android:background="#FFFFFF"
         android:layout_height="55dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_marginLeft="12dp"
             android:text="推荐商品"
             android:textColor="#ff333333"
             android:textSize="15sp"/>

         <Switch
             android:id="@+id/recommended_product_switch"
             android:layout_width="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:checked="true"
             android:layout_marginRight="12dp"
             android:thumb="@drawable/switch_thumb"
             android:track="@drawable/switch_track"
             android:layout_height="wrap_content"/>
     </RelativeLayout>
</LinearLayout>