<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/px_18"
        android:background="@mipmap/ic_more_touying"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/px_254"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_main_scan"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_89"
                android:layout_marginTop="@dimen/px_13"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txt_main_scan"
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_16"
                    android:layout_marginRight="@dimen/px_24"
                    android:src="@mipmap/ic_saoyisao" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_30" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/px_174"
                android:layout_height="@dimen/px_1"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_8"
                android:background="@color/color_bcbcbc" />

            <LinearLayout
                android:id="@+id/ll_main_article"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_89"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txt_main_article"
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_16"
                    android:layout_marginRight="@dimen/px_24"
                    android:src="@mipmap/ic_wenzhang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/write_an_article"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_30" />
            </LinearLayout>

            <View
                android:layout_width="@dimen/px_174"
                android:layout_height="@dimen/px_1"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_8"
                android:background="@color/color_bcbcbc" />

            <LinearLayout
                android:id="@+id/ll_main_create_group"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_89"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/txt_main_create_group"
                    android:layout_width="@dimen/px_40"
                    android:layout_height="@dimen/px_40"
                    android:layout_marginLeft="@dimen/px_16"
                    android:layout_marginRight="@dimen/px_24"
                    android:src="@mipmap/ic_jianqun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/A_group_chat"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_30" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>