<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0">

        <ListView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70.0dip"
            android:background="#ffffffff" />

        <!--<android.support.v7.widget.CardView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:cardElevation="4.0dip">-->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="70.0dip"
                android:background="#ffffffff"
                android:paddingEnd="8.0dip"
                android:paddingStart="8.0dip">

                <android.support.v7.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/my_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:src="#ffe0e0e0" />
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10.0dip"
                    android:layout_toRightOf="@+id/card"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff232323"
                        android:text="梁东波"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.0dip"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="@dimen/px_28"
                            android:layout_height="@dimen/px_28"
                            android:src="@mipmap/invite_nuber"/>

                        <TextView
                            android:id="@+id/my_cnt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:layout_marginRight="@dimen/px_30"
                            android:textColor="@color/txt_color_999999"
                            android:textSize="@dimen/px_26"
                            android:text="1233"/>
                        <ImageView
                            android:layout_width="@dimen/px_28"
                            android:layout_height="@dimen/px_28"
                            android:src="@mipmap/invite_gold"/>

                        <TextView
                            android:id="@+id/invite_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:layout_marginRight="@dimen/px_30"
                            android:textColor="@color/txt_color_999999"
                            android:textSize="@dimen/px_26"
                            android:text="1233"/>
                        <ImageView
                            android:layout_width="@dimen/px_28"
                            android:layout_height="@dimen/px_28"
                            android:src="@mipmap/invite_integral"/>

                        <TextView
                            android:id="@+id/invite_integral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:layout_marginRight="@dimen/px_30"
                            android:textColor="@color/txt_color_999999"
                            android:textSize="@dimen/px_26"
                            android:text="1233"/>
                        <ImageView
                            android:layout_width="@dimen/px_28"
                            android:layout_height="@dimen/px_28"
                            android:src="@mipmap/invite_ranking"/>

                        <TextView
                            android:id="@+id/invite_rankeng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/px_10"
                            android:layout_marginRight="@dimen/px_30"
                            android:textColor="@color/txt_color_999999"
                            android:textSize="@dimen/px_26"
                            android:text="1233"/>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/go_to_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="16.0dip"
                    android:text="@string/invite_check_out"
                    android:textColor="#ff0075a9"
                    android:textSize="12.0sp" />
            </RelativeLayout>
        <!--</android.support.v7.widget.CardView>-->
    </FrameLayout>
</LinearLayout>