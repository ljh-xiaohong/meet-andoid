        <View android:background="@color/vive_colors_wire_e6e6e6" android:layout_width="fill_parent" android:layout_height="0.25dip" android:layout_alignParentBottom="true" />
    </RelativeLayout>
    <com.yuejian.meet.widgets.InnerListView android:id="@+id/group_item_list" android:layout_width="fill_parent" android:layout_height="wrap_content" android:divider="@color/vive_colors_wire_e6e6e6" android:dividerHeight="@dimen/px_1" />
</LinearLayout>