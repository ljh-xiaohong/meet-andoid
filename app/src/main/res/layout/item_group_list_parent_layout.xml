<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@+id/group_layout" android:layout_width="fill_parent" android:layout_height="@dimen/px_88">
        <View android:background="@color/vive_colors_wire_e6e6e6" android:layout_width="fill_parent" android:layout_height="@dimen/px_1" />
        <LinearLayout android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/px_24" android:layout_centerVertical="true">
            <TextView android:textSize="@dimen/px_30" android:textColor="@color/color_black_333333" android:id="@+id/group_city_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="珠海家庭群" />
