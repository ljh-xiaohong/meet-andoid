<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_10"
        android:background="@color/vive_colors_wire_e6e6e6" />
    <RelativeLayout
        android:id="@+id/action_msg_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_96"
        android:background="#fff6f6f6"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_action_message"
            android:layout_width="@dimen/px_320"
            android:layout_height="@dimen/px_84"
            android:layout_centerInParent="true"
            android:background="#ffd8d8d8"
            android:clickable="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_collect_header"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60" />

                <TextView
                    android:id="@+id/txt_action_collect_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_16"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_24" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <com.yuejian.meet.widgets.InnerListView
        android:id="@+id/action_lsit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="1"
        android:background="@color/color_white"
        android:divider="@color/setting_bg"
        android:verticalSpacing="@dimen/px_12"
        android:listSelector="@color/color_white"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_38"/>
</LinearLayout>
