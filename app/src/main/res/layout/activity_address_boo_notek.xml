<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FamilyTree.AddressBooNotekActivity">
    <include
        layout="@layout/titlebar_layout"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24">



        <TextView
            android:id="@+id/text_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/px_30"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/px_30"
            android:text="@string/treeadd_name25"/>

        <CheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_choose_sex"
            android:button="@null" />
    </LinearLayout>
    <ListView
        android:id="@+id/boo_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0dip" />
    <TextView
        android:id="@+id/launch_invite"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_98"
        android:gravity="center"
        android:textSize="@dimen/px_34"
        android:textColor="@color/white"
        android:background="@color/color_dd362b"
        android:text="@string/treeadd_name26"/>

</LinearLayout>