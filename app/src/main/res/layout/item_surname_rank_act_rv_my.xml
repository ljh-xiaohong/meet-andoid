<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dp">

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_surname_rank_tv_ranknum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerInParent="true"
            android:textColor="@color/color_black_333333"
            android:textSize="13sp"
            />

        <ImageView
            android:id="@+id/item_surname_rank_iv_medal"
            android:layout_width="20dp"
            android:layout_height="27dp"
           android:layout_centerInParent="true"

            />
    </RelativeLayout>

    <com.yuejian.meet.widgets.CircleImageView
        android:id="@+id/item_surname_rank_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/ll"
        />


    <TextView
        android:id="@+id/item_surname_rank_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/item_surname_rank_iv_icon"
        android:textColor="@color/color_black_333333"
        android:textSize="15sp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="功德"
            android:textColor="@color/color_grey_999999"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_surname_rank_tv_meritnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="57777778898"
            android:textColor="@color/color_black_333333"
            android:textSize="13sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e5e5e5"/>

</RelativeLayout>
