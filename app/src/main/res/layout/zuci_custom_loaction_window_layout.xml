<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="97.0dip"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="@dimen/px_18"
        android:layout_height="@dimen/px_18"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2.0dip"
        android:background="@mipmap/location_circle" />

    <LinearLayout
        android:id="@+id/loation_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3.0dip"
        android:background="@mipmap/ic_zuci_bg_place_nor"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/map_photo"
            android:layout_width="70.0dip"
            android:layout_height="54.0dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_clan_default_img" />

        <TextView
            android:id="@+id/txt_info_window"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginTop="@dimen/px_4"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="@dimen/px_140"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_black_333333" />
    </LinearLayout>
</RelativeLayout>