<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/hongbao"
        android:layout_width="wrap_content"
        android:layout_height="210.0dip"
        android:layout_gravity="center"
        android:alpha="1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:src="@mipmap/hongbaodi" />

        <LinearLayout
            android:id="@+id/jiangjin_view"
            android:layout_width="100.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50.0dip"
            android:background="#ffffffff"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="恭喜你获得"
                android:textColor="#ffe52600"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.0dip"
                android:text="220金币"
                android:textColor="#fffec046"
                android:textSize="12.0sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="58.0dip"
            android:src="@mipmap/hongbaojinbi" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="-5.0dip"
            android:scaleType="fitXY"
            android:src="@mipmap/hongbao_waifeng" />
    </FrameLayout>
</FrameLayout>