<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30">
        <LinearLayout
            android:id="@+id/grop_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/item_photo"
                android:layout_width="@dimen/px_72"
                android:layout_height="@dimen/px_72"
                android:src="@mipmap/ic_group_chat"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10.0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="4.0dip"
                        android:gravity="center"
                        android:maxLength="5"
                        android:text="用户名"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/px_28" />

                    <TextView
                        android:id="@+id/item_txt_age"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_30"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_item_sex_ll_bg"
                        android:drawableStart="@drawable/selector_item_sex_img"
                        android:gravity="center"
                        android:paddingLeft="@dimen/px_3"
                        android:paddingRight="@dimen/px_3"
                        android:text=" 24"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_24"
                        android:visibility="visible" />
                </LinearLayout>

                    <TextView
                        android:id="@+id/item_role"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:maxLength="10"
                        android:text="聊天"
                        android:textColor="@color/txt_color_999999"
                        android:textSize="@dimen/px_24" />
            </LinearLayout>
            <TextView
                android:id="@+id/txt_del"
                android:layout_width="@dimen/px_110"
                android:layout_height="@dimen/px_46"
                android:layout_marginRight="@dimen/px_30"
                android:background="@drawable/shape_tree_tag_item_bg"
                android:gravity="center"
                android:text="移出"
                android:textColor="@color/color_audit_text"
                android:textSize="@dimen/px_24" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
