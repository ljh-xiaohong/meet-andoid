<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".activities.creation.SuibiSelectTagActivity">

    <RelativeLayout
        android:id="@+id/select_tag_layout_title_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/iv_select_tag_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@mipmap/icon_fanhui_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="添加标签"
            android:textColor="@color/color_232323"
            android:textSize="15sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="选择相应的标签，能让更多人看到哦~"
        android:textSize="14sp"
        android:textColor="#999999" />

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/select_tag_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        zhy:max_select="1" />

    <Button
        android:id="@+id/btn_select_tag_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:enabled="false"
        android:background="@drawable/bg_edit_suibi_preview_btn" />

</LinearLayout>