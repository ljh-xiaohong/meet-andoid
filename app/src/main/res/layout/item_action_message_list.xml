<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/action_message_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_148"
        android:orientation="horizontal"
        android:padding="@dimen/px_24">

        <ImageView
            android:id="@+id/action_msg_photo"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_default" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_12"
            android:layout_weight="1.0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/action_mes_name"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="东波"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_28"
                android:textStyle="bold" />

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/action_msg_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_like_sel" />

                <TextView
                    android:id="@+id/action_msg_comment"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:text="东波"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_24" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/action_msg_time"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="07.10 11:11"
                android:textColor="@color/txt_color_999999"
                android:textSize="@dimen/px_24" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/action_msg_content"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80" />

        <ImageView
            android:id="@+id/action_msg_content_photo"
            android:layout_width="@dimen/px_80"
            android:layout_height="@dimen/px_80" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>