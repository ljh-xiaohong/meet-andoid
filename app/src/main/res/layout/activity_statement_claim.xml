<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/claim_the_request"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_88"
            android:background="@drawable/selector_bottom_bar_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Claim_requirements"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_30"
                android:typeface="serif" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0px"
                android:layout_weight="1.0" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:src="@mipmap/icon_wd_gengduo" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <LinearLayout
            android:id="@+id/claim_value"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_88"
            android:background="@drawable/selector_bottom_bar_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:text="@string/Claim_the_value"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_30"
                android:typeface="serif" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0px"
                android:layout_weight="1.0" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:src="@mipmap/icon_wd_gengduo" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <LinearLayout
            android:id="@+id/claim_privilege"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_88"
            android:background="@drawable/selector_bottom_bar_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/A_privilege"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_30"
                android:typeface="serif" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0px"
                android:layout_weight="1.0" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:src="@mipmap/icon_wd_gengduo" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <LinearLayout
            android:id="@+id/claim_notice"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_88"
            android:background="@drawable/selector_bottom_bar_bg"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_24"
            android:paddingRight="@dimen/px_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Claim_to_know"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_30"
                android:typeface="serif" />

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0px"
                android:layout_weight="1.0" />

            <ImageView
                android:layout_width="15.0dip"
                android:layout_height="15.0dip"
                android:src="@mipmap/icon_wd_gengduo" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <Button
                android:id="@+id/determine"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_94"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/px_100"
                android:layout_marginLeft="@dimen/px_24"
                android:layout_marginRight="@dimen/px_24"
                android:background="@drawable/selector_gift_group_btn"
                android:text="@string/Participate_in_the_claim"
                android:textColor="@color/color_radio_sex_button" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>