<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_24"
            android:gravity="center"
            android:text="收款名称"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />

        <EditText
            android:id="@+id/charge_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_24"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入收款名称"
            android:lines="1"
            android:maxLines="1"
            android:textSize="@dimen/px_30" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginTop="@dimen/px_16"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_24"
        android:text="收款原因"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_30" />

    <EditText
        android:id="@+id/charge_info"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_200"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/white"
        android:gravity="start"
        android:hint="请填写收款原因"
        android:padding="@dimen/px_24"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_28" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginTop="@dimen/px_16"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_24"
            android:gravity="center"
            android:text="人均金额"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />

        <EditText
            android:id="@+id/charge_price"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_24"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入收款金额/元(不能超过200元)"
            android:inputType="number"
            android:textSize="@dimen/px_30" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/proeccds_member_sel"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/px_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_24"
            android:gravity="center"
            android:text="收款范围"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/member_sel_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_12"
            android:layout_weight="1.0"
            android:gravity="end|center"
            android:textColor="@color/mine_tips_text_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_more_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_proceeds_tiem"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:layout_marginTop="@dimen/px_1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingRight="@dimen/px_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/px_24"
            android:gravity="center"
            android:text="截止时间"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />

        <TextView
            android:id="@+id/priceeds_time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/px_12"
            android:layout_weight="1.0"
            android:gravity="end|center"
            android:text=""
            android:textColor="@color/mine_tips_text_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ic_more_right" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/px_1"
        android:layout_height="wrap_content"
        android:layout_weight="1.0" />

    <Button
        android:id="@+id/bu_submit"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_96"
        android:layout_below="@+id/ll_input_all"
        android:layout_marginBottom="@dimen/px_96"
        android:layout_marginLeft="20.0dip"
        android:layout_marginRight="20.0dip"
        android:background="@drawable/shape_button_ab3a34"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>