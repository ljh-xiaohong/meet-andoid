<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_white"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/px_54"
    android:paddingLeft="@dimen/px_24"
    android:paddingRight="@dimen/px_24"
    android:paddingTop="@dimen/px_54"
    android:tag="layout/fragment_person_info_0">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_28"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="家乡："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/origin_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_28"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="住在："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/live_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_28"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="行业："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/industry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_28"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="职业："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/occupation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_28"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="兴趣："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/interest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_28"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="特长："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/speciality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/px_28"
            android:text="生日："
            android:textColor="#ff7d7d7f"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff575959"
            android:textSize="@dimen/px_28"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>