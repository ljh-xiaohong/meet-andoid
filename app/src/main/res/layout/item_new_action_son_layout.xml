<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
   <LinearLayout
       android:id="@+id/item_new_action_son_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="@dimen/px_24"
       android:orientation="horizontal"
       android:gravity="center_vertical">
       <TextView
           android:id="@+id/item_new_action_son_title"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingRight="@dimen/px_24"
           android:maxLines="2"
           android:layout_weight="1"
           android:text="你好"/>
       <ImageView
           android:id="@+id/item_new_action_son_photo"
           android:layout_width="@dimen/px_92"
           android:layout_height="@dimen/px_92"
           android:scaleType="centerCrop"
           android:src="@mipmap/ic_default"/>
   </LinearLayout>

</LinearLayout>
