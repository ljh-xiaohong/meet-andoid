<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px_630"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/px_60"
        android:paddingBottom="@dimen/px_50"
        android:background="@drawable/shape_button_white"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/close_action_dialog"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:layout_gravity="end"
            android:src="@mipmap/xiayizhang"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_232323"
            android:text="@string/action_dialog_text"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_30"
            android:layout_marginBottom="@dimen/px_30"
            android:gravity="center">
            <TextView
                android:id="@+id/txt_action_all"
                android:layout_width="@dimen/px_150"
                android:layout_height="@dimen/px_48"
                android:background="@drawable/selector_action_type_item_btn"
                android:textColor="@color/color_set_group_limits_button"
                android:gravity="center"
                android:text="@string/txt_comment_all"/>
            <TextView
                android:id="@+id/txt_action_attention"
                android:layout_width="@dimen/px_150"
                android:layout_height="@dimen/px_48"
                android:layout_marginLeft="@dimen/px_60"
                android:background="@drawable/selector_action_type_item_btn"
                android:textColor="@color/color_set_group_limits_button"
                android:gravity="center"
                android:text="@string/action_dialog_text1"/>

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginRight="@dimen/px_60"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <RelativeLayout
            android:id="@+id/action_choose_surname"
            android:layout_width="fill_parent"
            android:layout_marginRight="@dimen/px_60"
            android:layout_height="@dimen/px_90">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/surnames"
                android:textColor="@color/color_black_333333" />

            <TextView
                android:id="@+id/txt_action_surname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_member_more_img"
                android:gravity="center"
                android:text="@string/home_all_name"
                android:textColor="@color/txt_color_999999" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginRight="@dimen/px_60"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <RelativeLayout
            android:id="@+id/actoin_choose_city"
            android:layout_width="fill_parent"
            android:layout_marginRight="@dimen/px_60"
            android:layout_height="@dimen/px_90">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/action_dialog_text2"
                android:textColor="@color/color_black_333333" />

            <TextView
                android:id="@+id/txt_action_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/ic_member_more_img"
                android:gravity="center"
                android:text="@string/nationwide"
                android:textColor="@color/txt_color_999999" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_1"
            android:layout_marginRight="@dimen/px_60"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <TextView
            android:id="@+id/sel_action_submit"
            android:layout_width="@dimen/px_200"
            android:layout_height="@dimen/px_68"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/px_50"
            android:background="@drawable/shape_button_dd362b"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>