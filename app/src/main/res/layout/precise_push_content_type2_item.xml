<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:paddingLeft="12dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <com.yuejian.meet.activities.custom.view.RoundAngleImageView
        android:id="@+id/msg_img"
        android:layout_width="110dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_height="110dp" />

    <TextView
        android:id="@+id/title"
        android:layout_below="@+id/msg_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019新茶金骏眉红茶特级浓香型"
        android:textColor="#333333"
        android:layout_marginTop="8dp"
        android:textSize="12sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:src="@mipmap/icon_home_vip"
            android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#FFF54D4D"
        android:textSize="10sp"
        android:includeFontPadding="false"
        android:text="￥"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:textColor="#FFF54D4D"
        android:includeFontPadding="false"
        android:textSize="13sp"
        android:text="100"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#FFB4B4B4"
        android:textSize="10sp"
        android:layout_marginLeft="9dp"
        android:includeFontPadding="false"
        android:text="￥"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/original_money"
        android:layout_width="wrap_content"
        android:textColor="#FFB4B4B4"
        android:includeFontPadding="false"
        android:textSize="13sp"
        android:text="100"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
