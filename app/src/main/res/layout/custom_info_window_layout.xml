<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80.0dip"
    android:layout_height="wrap_content"
    android:background="@mipmap/ic_bg_zqhdw"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/map_photo"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_120"
        android:layout_marginTop="@dimen/px_20"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_clan_default_img" />

    <TextView
        android:id="@+id/txt_info_window"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10.0dip"
        android:layout_marginTop="@dimen/px_4"
        android:ellipsize="end"
        android:maxWidth="@dimen/px_150"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white" />
</LinearLayout>