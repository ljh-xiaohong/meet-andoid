<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verifyld_text"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_168"
        android:layout_marginTop="@dimen/px_12"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verifyld_text1"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="1.0px"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@+id/upload_id_card_and_head_img"
            android:layout_width="@dimen/px_120"
            android:layout_height="@dimen/px_120"
            android:src="@mipmap/icon_shangchuan" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ffebebeb" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_168"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verifyld_text2"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/px_30" />

        <View
            android:layout_width="0.0dip"
            android:layout_height="1.0px"
            android:layout_weight="1.0" />

        <ImageView
            android:id="@+id/upload_id_card_img"
            android:layout_width="@dimen/px_120"
            android:layout_height="@dimen/px_120"
            android:src="@mipmap/icon_shangchuan" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/see_the_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/px_20"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/px_36"
            android:layout_height="@dimen/px_24"
            android:layout_marginRight="8.0dip"
            android:src="@mipmap/icon_cksl" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verifyld_text3"
            android:textColor="#ff797979"
            android:textSize="@dimen/px_28" />
    </LinearLayout>

    <View
        android:layout_width="1.0px"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <Button
        android:id="@+id/sure_verify_id_card"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_96"
        android:layout_marginBottom="@dimen/px_96"
        android:layout_marginLeft="24.0dip"
        android:layout_marginRight="24.0dip"
        android:background="@drawable/selector_btn_verify_wx"
        android:enabled="true"
        android:text="@string/verifyld_text4"
        android:textColor="@color/white"
        android:textSize="@dimen/px_34" />
</LinearLayout>