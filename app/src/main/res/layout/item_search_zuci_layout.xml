<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_zuci_photo"
        android:layout_width="@dimen/px_108"
        android:layout_height="@dimen/px_108"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/px_12"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:layout_marginTop="@dimen/px_12"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_zuci_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="名字"
            android:textColor="#ff171717"
            android:textSize="@dimen/px_32" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/px_22"
                android:layout_height="@dimen/px_22"
                android:src="@mipmap/ic_dingwei_hui" />

            <TextView
                android:id="@+id/search_zuci_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_4"
                android:maxLines="1"
                android:text="广东"
                android:textColor="@color/txt_color_999999"
                android:textSize="@dimen/px_28" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/banding_zuci"
        android:layout_width="@dimen/px_120"
        android:layout_height="@dimen/px_56"
        android:layout_marginRight="@dimen/px_24"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/selector_zuci_banding_text"
        android:background="@drawable/shape_button_zuci_binding_bg"
        android:text="绑定"
        android:visibility="gone"/>

</LinearLayout>