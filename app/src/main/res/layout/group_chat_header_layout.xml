<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/px_136"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_136"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/group_feet"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/px_80"
                    android:layout_height="@dimen/px_80"
                    android:src="@mipmap/ic_group_feet" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:text="@string/Group_chat_footprint"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_30" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_100"
            android:layout_gravity="center"
            android:background="@color/vive_colors_wire_e6e6e6" />

        <RelativeLayout
            android:id="@+id/group_fonud"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/px_80"
                    android:layout_height="@dimen/px_80"
                    android:src="@mipmap/ic_group_fonud" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_20"
                    android:text="@string/A_group_chat"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_30" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>