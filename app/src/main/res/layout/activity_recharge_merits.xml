<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yuejian.meet.framents.find.RechargeMeritsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/ziyuanyi"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <ImageButton
                android:id="@+id/recharge_merits_act_ib_back"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="#00ffffff"
                android:src="@mipmap/back_white"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="充值功德"
                android:textColor="@color/white"
                android:textSize="18sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/for_home_act_tv_allmerits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/white"
                android:textSize="45sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="我的功德"
                android:textColor="@color/white"
                android:textSize="14sp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="选择充值金额"
        android:textColor="@color/color_black_333333"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#e5e5e5"
        />


    <RadioGroup
        android:id="@+id/recharge_merits_act_rg_selected_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/recharge_merits_act_rb_wushi_money"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:background="@drawable/recharge_merits_act_money_wushi_selector"
            android:button="@null"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0.1px"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/recharge_merits_act_rb_yibai_money"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:background="@drawable/recharge_merits_act_money_yibai_selector"
            android:button="@null"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="0.1px"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/recharge_merits_act_rb_wubai_money"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:background="@drawable/recharge_merits_act_money_wubai_selector"
            android:button="@null"
            />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="15dp"
        android:background="#e5e5e5"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="选择支付方式"
        android:textColor="@color/color_black_333333"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="#e5e5e5"
        />

    <RelativeLayout
        android:id="@+id/recharge_merits_act_rl_weixinpay"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_weixinpay"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/weixin_pay_xu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_weixinpay"
            android:text="微信支付"
            android:textColor="@color/color_black_333333"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/goout_xu"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e5e5e5"
        />

    <RelativeLayout
        android:id="@+id/recharge_merits_act_rl_alipay"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageView
            android:id="@+id/iv_alipay"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/alipay_xu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_alipay"
            android:text="支付宝支付"
            android:textColor="@color/color_black_333333"
            android:textSize="16sp"/>

        <ImageView
            android:layout_width="7dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/goout_xu"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#e5e5e5"
        />
</LinearLayout>
