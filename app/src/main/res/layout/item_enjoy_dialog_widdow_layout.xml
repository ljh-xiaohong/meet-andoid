<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/px_450"
            android:layout_height="@dimen/px_530"
            android:background="@mipmap/ic_enjoy_chahua"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:layout_marginBottom="@dimen/px_100"
                android:textSize="@dimen/px_26"
                android:textColor="@color/color_232323"
                android:text="@string/enjoy_succed_4"/>

        </RelativeLayout>
        <ImageView
            android:id="@+id/window_close"
            android:layout_width="@dimen/px_45"
            android:layout_height="@dimen/px_45"
            android:layout_marginTop="@dimen/px_30"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_dialog_close_white"/>
    </LinearLayout>

</LinearLayout>
