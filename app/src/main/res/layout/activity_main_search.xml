<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_search_title_bar" />

    <LinearLayout
        android:id="@+id/layout_search_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:layout_marginTop="@dimen/px_72"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/verify_business_text3"
            android:textColor="@color/txt_color_666666" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_member"
                style="@style/search_txt_layout_content"
                android:text="@string/clan_relatives" />

            <TextView
                android:id="@+id/txt_zuci"
                style="@style/search_txt_layout_content"
                android:text="@string/Ancestral_shrine" />

            <TextView
                android:id="@+id/txt_zqh"
                style="@style/search_txt_layout_content"
                android:text="@string/Clansmen_association" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_40"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_group"
                style="@style/search_txt_layout_content"
                android:text="@string/group_chat" />

            <TextView
                android:id="@+id/txt_article"
                style="@style/search_txt_layout_content"
                android:text="@string/article" />

            <TextView
                style="@style/search_txt_layout_content"
                android:text="宗亲"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/layout_scrol"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layerType="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_search_member"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/search_txt_list_title"
                    android:text="@string/clan_relatives" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/search_member_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/vive_colors_wire_e6e6e6"
                    android:dividerHeight="@dimen/px_1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <TextView
                    android:id="@+id/more_member"
                    style="@style/search_txt_list_botton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/search_txt_list_title"
                    android:text="@string/group_chat" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/search_group_lsit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/vive_colors_wire_e6e6e6"
                    android:dividerHeight="@dimen/px_1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <TextView
                    android:id="@+id/more_group"
                    style="@style/search_txt_list_botton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search_article"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/search_txt_list_title"
                    android:text="@string/article" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/search_article_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/vive_colors_wire_e6e6e6"
                    android:dividerHeight="@dimen/px_1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <TextView
                    android:id="@+id/more_article"
                    style="@style/search_txt_list_botton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search_zhongqinhu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/search_txt_list_title"
                    android:text="@string/Clansmen_association" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/search_zhongqinhu_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/vive_colors_wire_e6e6e6"
                    android:dividerHeight="@dimen/px_1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <TextView
                    android:id="@+id/more_zhongqinhu"
                    style="@style/search_txt_list_botton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_search_zuci"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/search_txt_list_title"
                    android:text="@string/Ancestral_shrine" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/search_zuci_list"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/vive_colors_wire_e6e6e6"
                    android:dividerHeight="@dimen/px_1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/vive_colors_wire_e6e6e6" />

                <TextView
                    android:id="@+id/more_zuci"
                    style="@style/search_txt_list_botton" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>