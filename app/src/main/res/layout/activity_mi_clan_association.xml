<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <ListView
        android:id="@+id/mi_clan_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:divider="@color/setting_bg"
        android:dividerHeight="@dimen/px_12"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/no_clan_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/px_120"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clang_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clan_img_sel_bg" />

            <TextView
                android:id="@+id/chóujiànzhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Join_the_clan3"
                android:textColor="#ff3498db"
                android:textSize="@dimen/px_28"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_clan_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Join_the_clan2"
                android:textColor="#ff3f3f3f"
                android:textSize="@dimen/px_32" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_96"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_marginRight="@dimen/px_24"
            android:orientation="vertical">

            <TextView
                android:id="@+id/add_clan"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_96"
                android:background="@drawable/shape_button_white"
                android:gravity="center"
                android:text="@string/Join_the_clan"
                android:textColor="#ff232323" />

            <Button
                android:id="@+id/create_clan"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_96"
                android:layout_marginTop="@dimen/px_28"
                android:background="@drawable/shape_button_ab3a34"
                android:text="@string/careate_clan"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>