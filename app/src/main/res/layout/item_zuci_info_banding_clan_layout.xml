<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/px_317"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_24"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_banding_clan_photo"
            android:layout_width="@dimen/px_317"
            android:layout_height="@dimen/px_200"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_banding_clan_name"
                android:layout_width="@dimen/px_84"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="颜如"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_30" />

            <TextView
                android:id="@+id/item_banding_clan_name_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@mipmap/zuci_number"
                android:gravity="center"
                android:paddingLeft="@dimen/px_8"
                android:paddingRight="@dimen/px_8"
                android:text=" 23"
                android:textColor="@color/color_ab3a34"
                android:textSize="@dimen/px_30" />
        </LinearLayout>

        <TextView
            android:id="@+id/banding_clan_but"
            android:layout_width="@dimen/px_160"
            android:layout_height="@dimen/px_48"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/shape_know_more"
            android:gravity="center"
            android:text="进入宗亲会"
            android:textColor="@color/color_home_top_bar"
            android:textSize="@dimen/px_24" />
    </LinearLayout>
</LinearLayout>