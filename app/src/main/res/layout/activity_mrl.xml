<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff282828" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="33.0dip"
        android:background="@color/praise_item_default"
        android:gravity="center"
        app:tabIndicatorColor="@color/bg_indicator_point_selected"
        app:tabSelectedTextColor="@color/bg_indicator_point_selected"
        app:tabTextAppearance="@style/AtyTabLayoutTextAppearance"
        app:tabTextColor="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />
</LinearLayout>