<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_all_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/setting_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/contact_letter"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_24"
        android:visibility="gone" />

    <View
        android:id="@+id/itemt_wire"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/vive_colors_wire_e6e6e6"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_104"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_24"
        android:paddingRight="@dimen/px_24">

        <CheckBox
            android:id="@+id/member_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_choose_sex"
            android:button="@null" />

        <RelativeLayout
            android:layout_width="@dimen/px_90"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_64">

            <ImageView
                android:id="@+id/img_member_icon"
                android:layout_width="@dimen/px_72"
                android:layout_height="@dimen/px_72"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_default" />

            <ImageView
                android:id="@+id/member_faqr"
                android:layout_width="@dimen/px_90"
                android:layout_height="@dimen/px_35"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-3.0px"
                android:src="@mipmap/ic_shi"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/text_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_15"
            android:textColor="#ff333333"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/member_age"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px_30"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_6"
            android:background="@drawable/selector_item_sex_ll_bg"
            android:drawableLeft="@drawable/selector_item_sex_img"
            android:gravity="center"
            android:paddingLeft="@dimen/px_3"
            android:paddingRight="@dimen/px_3"
            android:textColor="@color/white"
            android:textSize="@dimen/px_24" />
    </LinearLayout>
</LinearLayout>