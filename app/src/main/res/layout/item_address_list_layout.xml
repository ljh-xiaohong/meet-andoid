<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/setting_bg">
    <TextView
        android:id="@+id/contact_letter"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_44"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_30"
        android:paddingRight="@dimen/px_24"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_24"
        android:visibility="visible" />
<com.yuejian.meet.widgets.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_swipe_menulayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_common_txt_bg"
    android:clickable="true"
    android:paddingBottom="1.0dip"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/px_30">
        <LinearLayout
            android:id="@+id/grop_chat_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/px_15"
            android:paddingBottom="@dimen/px_15"
            android:gravity="center_vertical">
            <com.yuejian.meet.widgets.CircleImageView
                android:id="@+id/item_photo"
                android:layout_width="@dimen/px_72"
                android:layout_height="@dimen/px_72"
                android:src="@mipmap/ic_group_chat"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10.0dip"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="4.0dip"
                        android:gravity="center"
                        android:maxLength="5"
                        android:text="用户名"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/px_28" />

                    <TextView
                        android:id="@+id/item_txt_age"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_30"
                        android:layout_gravity="center"
                        android:background="@drawable/selector_item_sex_ll_bg"
                        android:drawableStart="@drawable/selector_item_sex_img"
                        android:gravity="center"
                        android:paddingLeft="@dimen/px_3"
                        android:paddingRight="@dimen/px_3"
                        android:text=" 24"
                        android:textColor="@color/white"
                        android:textSize="@dimen/px_24"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/item_role"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:maxLength="10"
                        android:text="聊天"
                        android:textColor="@color/txt_color_999999"
                        android:textSize="@dimen/px_24" />
                    <ImageView
                        android:layout_width="@dimen/px_25"
                        android:layout_height="@dimen/px_25"
                        android:src="@mipmap/ic_update_user"/>
                    <TextView
                        android:id="@+id/item_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_8"
                        android:layout_marginRight="@dimen/px_72"
                        android:textSize="@dimen/px_24"
                        android:textColor="#559ccd"
                        android:text="修改关系"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnUnRead"
        android:layout_width="@dimen/px_174"
        android:layout_height="fill_parent"
        android:background="#D2D2D2"
        android:clickable="true"
        android:text="加入黑名单"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="@dimen/px_148"
        android:layout_height="fill_parent"
        android:background="#fff03939"
        android:text="删除好友"
        android:textColor="@android:color/white"
        android:textSize="@dimen/px_28" />
</com.yuejian.meet.widgets.SwipeMenuLayout>
</LinearLayout>
