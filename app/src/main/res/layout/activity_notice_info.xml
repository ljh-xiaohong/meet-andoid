<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/ic_clan_gonggao_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/px_24"
        android:background="@drawable/shape_clan_notice_bg"
        android:orientation="vertical"
        android:padding="1.0dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_36"
            android:text="公告"
            android:textColor="@color/color_232323"
            android:textSize="@dimen/px_34" />

        <TextView
            android:id="@+id/notice_info_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/px_14"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_marginRight="@dimen/px_36"
            android:layout_marginTop="@dimen/px_36"
            android:background="#ffefe8dd"
            android:padding="@dimen/px_24"
            android:text="本次元旦活动公告：\n顺口哈根达"
            android:textColor="#ff9c835e"
            android:textSize="@dimen/px_28" />

        <TextView
            android:id="@+id/notice_tiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:text="2018-03-05"
            android:textColor="@color/txt_color_666666"
            android:textSize="@dimen/px_24" />

        <GridView
            android:id="@+id/notice_grid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_36"
            android:layout_marginRight="@dimen/px_36"
            android:layout_marginTop="@dimen/px_32"
            android:columnWidth="@dimen/px_12"
            android:numColumns="3"
            android:verticalSpacing="@dimen/px_12" />
    </LinearLayout>
</LinearLayout>