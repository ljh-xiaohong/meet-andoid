<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_no_photo">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <include layout="@layout/titlebar_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_marginTop="@dimen/px_24"
            android:text="全国"
            android:textColor="#ff797979"
            android:textSize="@dimen/px_30"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/city_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="@dimen/px_24"
            android:divider="@color/bg_no_photo"
            android:dividerHeight="@dimen/px_1" />
    </LinearLayout>
</LinearLayout>