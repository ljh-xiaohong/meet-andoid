<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FamilyTree.TreeAddActivity">
    <include
        layout="@layout/titlebar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:background="@color/setting_bg"
                    android:text="@string/treeadd_name3"/>
                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/tree_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/no_user_requst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_no_user_apply"
                android:visibility="gone"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:background="@color/setting_bg"
                    android:text="@string/treeadd_name4"/>
                <com.yuejian.meet.widgets.InnerListView
                    android:id="@+id/tree_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/white"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>