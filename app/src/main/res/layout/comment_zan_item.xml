<?xml version="1.0" encoding="utf-8"?>
<com.yuejian.meet.widgets.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:id="@+id/swipeMenuLayout">

    <RelativeLayout
        android:id="@+id/rlItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yuejian.meet.widgets.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/iv_icon"
            android:singleLine="true"
            android:text="颜伟赞了你的动态"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="9dp"/>
        <LinearLayout
            android:id="@+id/zan_img_lay"
            android:layout_below="@+id/title"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/content_img"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/zan_img"
            android:layout_width="wrap_content"
            android:src="@mipmap/icon_zan_sel"
            android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/comment_content"
                android:text="传统文化很有继承和发扬意义"
                android:textSize="12sp"
                android:includeFontPadding="false"
                android:textColor="#FF4C4C4C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zan_img_lay"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_marginRight="15dp"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:text="07.28 11:11"
            android:layout_marginLeft="9dp"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/content_img"
            android:layout_width="54dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_height="54dp" />
    </RelativeLayout>


    <Button
        android:id="@+id/btnDelete"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:background="#F03939"
        android:text="删除"
        android:textColor="@android:color/white" />
</com.yuejian.meet.widgets.SwipeMenuLayout>