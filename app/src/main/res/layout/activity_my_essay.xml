<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/setting_bg"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="#ff282828" />

    <android.support.design.widget.TabLayout
        android:id="@+id/my_essay_tab"
        android:layout_width="fill_parent"
        android:layout_height="33.0dip"
        android:background="#ffffffff"
        android:gravity="center"
        app:tabIndicatorColor="#ffab3a34"
        app:tabSelectedTextColor="#ffab3a34"
        app:tabTextAppearance="@style/AtyTabLayoutTextAppearance"
        app:tabTextColor="#ff333333" />

    <android.support.v4.view.ViewPager
        android:id="@+id/my_essay_vp"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />
</LinearLayout>