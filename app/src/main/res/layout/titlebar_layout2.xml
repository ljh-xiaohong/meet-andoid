<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topic_action_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/layout_titlebar_height"
    android:background="@color/white">
    <ImageButton
        android:id="@+id/titlebar_imgBtn_back"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_title_bar_back"
        android:clickable="true"
        android:paddingBottom="@dimen/dp_4"
        android:layout_marginLeft="@dimen/px_60"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        android:src="@mipmap/back_left"
        android:visibility="visible" />
    <TextView
        android:id="@+id/txt_titlebar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginRight="@dimen/dp_4"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="195.0dip"
        android:textColor="@android:color/white"
        android:textSize="18.0sp"
        android:textStyle="bold"
        android:visibility="gone"/>


</RelativeLayout>
