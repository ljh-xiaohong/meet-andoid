<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:id="@+id/item_income_list_item_background"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/item_income_list_item_time"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_income_list_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_income_list_item_num"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:gravity="center"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_income_list_item_event"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#ff666666"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_income_list_item_income"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#ff666666"
        android:textSize="12sp" />


</LinearLayout>