<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/header_title"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:background="#ffffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="邀请排行榜"
            android:textColor="#ff232323"
            android:textSize="17.0sp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="75.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingRight="8.0dip">

        <FrameLayout
            android:layout_width="60.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#ff999999"
                android:textSize="14.0sp" />

            <ImageView
                android:id="@+id/commend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/n1" />
        </FrameLayout>

        <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_margin="2.0dip"
            app:cardCornerRadius="2.0dip"
            app:cardElevation="2.0dip">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="#ffe8e8e8" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_marginStart="8.0dip"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff232323"
                    android:textSize="17.0sp" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="16.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="8.0dip"
                    android:background="@drawable/selector_item_sex_ll_bg"
                    android:drawableLeft="@drawable/selector_item_sex_img"
                    android:gravity="center"
                    android:paddingLeft="2.0dip"
                    android:paddingRight="2.0dip"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <View
                android:layout_width="0.0dip"
                android:layout_height="1.0px"
                android:layout_weight="1.0" />

            <TextView
                android:id="@+id/invite_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="邀请人数: ##"
                android:textColor="#ff333333"
                android:textSize="11.0sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>