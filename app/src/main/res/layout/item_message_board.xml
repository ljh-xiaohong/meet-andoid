<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:paddingBottom="4.0dip"
    android:paddingEnd="8.0dip"
    android:paddingStart="8.0dip"
    android:paddingTop="4.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photo"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:src="#ffe0e0e0" />

        <RelativeLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginStart="8.0dip"
            android:layout_weight="1.0">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4.0dip"
                android:text="name"
                android:textColor="#ff666666"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="16.0dip"
                android:layout_below="@+id/name"
                android:background="@drawable/shape_address"
                android:gravity="center"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip"
                android:text="珠海"
                android:textColor="@color/color_white"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="16.0dip"
                android:layout_alignTop="@+id/city"
                android:layout_marginStart="4.0dip"
                android:layout_toEndOf="@+id/city"
                android:background="@drawable/selector_item_sex_ll_bg"
                android:drawableStart="@drawable/selector_item_sex_img"
                android:gravity="center"
                android:paddingLeft="2.0dip"
                android:paddingRight="2.0dip"
                android:textColor="@color/white"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/job"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/age"
                android:layout_gravity="center"
                android:layout_marginStart="4.0dip"
                android:layout_toEndOf="@+id/age"
                android:maxLength="8"
                android:textColor="@color/txt_color_666666"
                android:textSize="@dimen/px_24" />

            <TextView
                android:id="@+id/focus"
                android:layout_width="64.0dip"
                android:layout_height="24.0dip"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_focus_btn"
                android:gravity="center"
                android:text="加关注"
                android:textColor="#ffffffff" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50.0dip"
        android:layout_marginTop="4.0dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="今年清明没有回家祭祖"
            android:textColor="#ff232323"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12.0dip"
            android:text="8分钟前" />
    </LinearLayout>
</LinearLayout>