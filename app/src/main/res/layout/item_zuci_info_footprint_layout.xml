<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_24"
        android:layout_marginLeft="@dimen/px_24"
        android:layout_marginRight="@dimen/px_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_footprint_photo"
            android:layout_width="@dimen/px_148"
            android:layout_height="@dimen/px_148"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_default" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/item_footprint_name"
                android:layout_width="@dimen/px_84"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="颜如"
                android:textColor="@color/txt_color_666666"
                android:textSize="@dimen/px_28" />

            <TextView
                android:id="@+id/item_footprints_age"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_30"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_item_sex_ll_bg"
                android:drawableLeft="@drawable/selector_item_sex_img"
                android:gravity="center"
                android:paddingLeft="@dimen/px_8"
                android:paddingRight="@dimen/px_8"
                android:text=" 23"
                android:textColor="@color/white"
                android:textSize="@dimen/px_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/footprint_but"
            android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_20"
            android:background="@drawable/shape_zuci_footprints_badge_bg"
            android:gravity="center"
            android:text="打招呼"
            android:textColor="@color/white"
            android:textSize="@dimen/px_24" />
    </LinearLayout>
</LinearLayout>