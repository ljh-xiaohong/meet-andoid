<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal"
    android:background="@drawable/underline_bg_half_dp">

      <LinearLayout
          android:layout_width="wrap_content"
          android:orientation="vertical"
          android:layout_marginLeft="12dp"
          android:gravity="center"
          android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="视频模板"
            android:textColor="#333333"
            android:textSize="16sp" />
          <View
              android:id="@+id/title_underline_red_one"
              android:layout_width="20dp"
              android:layout_height="3dp"
              android:layout_marginTop="2dp"
              android:background="#AB3A34" />
      </LinearLayout>
    <TextView
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:text="竖版"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="3dp"
        android:layout_height="wrap_content"
        android:textColor="#ff999999"
        android:textSize="12sp"/>
    <View
        android:layout_width="8dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/dowm"
        android:layout_height="7dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="海报模板"
            android:textColor="#333333"
            android:textSize="16sp" />
        <View
            android:id="@+id/title_underline_red_two"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:background="#AB3A34" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_title_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="我的创作"
            android:textColor="#333333"
            android:textSize="16sp" />
        <View
            android:id="@+id/title_underline_red_three"
            android:layout_width="20dp"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:background="#AB3A34" />
    </LinearLayout>
</LinearLayout>