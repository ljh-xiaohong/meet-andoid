<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.common.SelectFamilyCityActivity">
    <include layout="@layout/titlebar_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_88"
        android:paddingLeft="@dimen/px_30"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/select1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#c69c6d"
            android:text="请选择"/>
        <TextView
            android:id="@+id/select2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_60"
            android:textColor="#c69c6d"
            android:text="请选择"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/select3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_60"
            android:textColor="#c69c6d"
            android:text="请选择"
            android:visibility="gone"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/vive_colors_wire_e6e6e6"/>
    <ListView
        android:id="@+id/city_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="@dimen/px_24"
        android:divider="@color/vive_colors_wire_e6e6e6"
        android:dividerHeight="@dimen/px_1" />
</LinearLayout>