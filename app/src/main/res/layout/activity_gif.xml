<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="wrap_content">
    <com.yuejian.meet.utils.MyGifImageView
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/door_top_img"
        android:layout_height="wrap_content"/>
    <com.yuejian.meet.utils.MyImageView
        android:id="@+id/door_close"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/door_close"
        android:layout_below="@+id/door_top_img"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/door_top_img"
        android:layout_width="match_parent"
        android:src="@drawable/door_top"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/door_bottom"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:background="#99000000"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv1"
        android:text="欢迎回到"
        android:layout_marginTop="140dp"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv2"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv3"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_below="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv4"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_below="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv5"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:layout_below="@+id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>