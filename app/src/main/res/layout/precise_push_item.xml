<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="90dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:background="@drawable/line_top11"
    android:layout_marginBottom="12dp"
    android:layout_height="135dp">
<RelativeLayout
    android:id="@+id/iv_icon_lay"
    android:layout_width="54dp"
    android:layout_centerHorizontal="true"
    android:layout_height="54dp">
        <com.yuejian.meet.widgets.CircleImageView
            android:id="@+id/iv_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher_round"/>
    <ImageView
        android:id="@+id/vip_img"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/icon_home_vip"
        android:layout_height="wrap_content" />
</RelativeLayout>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_icon_lay"
            android:singleLine="true"
            android:text="颜惠"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:layout_marginTop="7dp"
            android:textSize="14sp"
            android:layout_marginLeft="9dp"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:drawableLeft="@mipmap/tab_message_position"
            android:layout_marginTop="10dp"
            android:drawablePadding="2dp"
            android:text="珠海市"
            android:textColor="#999999"
            android:textSize="12sp"
            android:layout_centerHorizontal="true" />
    <TextView
        android:id="@+id/attention"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:text="关注"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="12sp"
        android:background="@drawable/black_bottom11"
        android:layout_height="20dp" />
    </RelativeLayout>
