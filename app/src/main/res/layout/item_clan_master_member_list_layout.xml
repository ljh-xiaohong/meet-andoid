<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/item_clan_member_photo"
        android:layout_width="@dimen/px_72"
        android:layout_height="@dimen/px_72"
        android:layout_marginLeft="@dimen/px_24"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_default" />

    <TextView
        android:id="@+id/item_clan_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:text="颜如玉"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_28" />

    <TextView
        android:id="@+id/item_clan_member_age"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8.0dip"
        android:background="@drawable/selector_item_sex_ll_bg"
        android:drawableLeft="@drawable/selector_item_sex_img"
        android:gravity="center"
        android:paddingLeft="@dimen/px_8"
        android:paddingRight="@dimen/px_8"
        android:text=" 23"
        android:textColor="@color/white"
        android:textSize="@dimen/px_24" />

    <TextView
        android:id="@+id/item_clan_master"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.0dip"
        android:text="建立者"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_28"
        android:visibility="gone" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/px_1"
        android:layout_weight="1.0" />

    <TextView
        android:id="@+id/item_clan_member_remoe"
        android:layout_width="@dimen/px_112"
        android:layout_height="@dimen/px_44"
        android:layout_marginRight="@dimen/px_24"
        android:background="@drawable/shape_clan_member_remoe_txt_bg"
        android:gravity="center"
        android:text="移除"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/px_26" />
</LinearLayout>