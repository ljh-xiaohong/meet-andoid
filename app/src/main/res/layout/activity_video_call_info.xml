<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_12"
                android:background="@color/setting_bg" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_148"
                android:layout_marginLeft="@dimen/px_24"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/px_108"
                    android:layout_height="@dimen/px_108"
                    android:layout_gravity="center"
                    app:cardCornerRadius="@dimen/px_8">

                    <ImageView
                        android:id="@+id/video_call_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/video_call_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_24"
                    android:layout_marginTop="@dimen/px_45"
                    android:text="赵敏"
                    android:textColor="@color/color_black_333333" />

                <TextView
                    android:id="@+id/video_call_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_6"
                    android:layout_marginTop="@dimen/px_45"
                    android:background="@drawable/selector_item_sex_ll_bg"
                    android:drawableLeft="@drawable/selector_item_sex_img"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_4"
                    android:text=" 24"
                    android:textColor="@color/white" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_1"
                android:background="#ffe6e6e6" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_72"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_24"
                android:paddingRight="@dimen/px_24">

                <TextView
                    android:id="@+id/video_call_duration"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="去电时长 00：00：00"
                    android:textColor="@color/txt_color_666666"
                    android:textSize="@dimen/px_28" />

                <View
                    android:layout_width="@dimen/px_1"
                    android:layout_height="@dimen/px_48"
                    android:background="#ffe6e6e6" />

                <TextView
                    android:id="@+id/video_call_go_time"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="去电时间 9:30"
                    android:textColor="@color/txt_color_666666"
                    android:textSize="@dimen/px_28" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/px_12"
                android:background="@color/setting_bg" />

            <TextView
                android:id="@+id/video_call_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px_40"
                android:text="100金币"
                android:textColor="#ffdaa85c"
                android:textSize="@dimen/px_40" />

            <TextView
                android:id="@+id/video_call_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px_20"
                android:text="100金币/分钟"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_28" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_72"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_24"
                android:paddingRight="@dimen/px_24">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_weight="1.0"
                    android:background="#ffe6e6e6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_32"
                    android:layout_marginRight="@dimen/px_32"
                    android:text="我对他的评价"
                    android:textColor="@color/txt_color_999999"
                    android:textSize="@dimen/px_24" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_weight="1.0"
                    android:background="#ffe6e6e6" />
            </LinearLayout>

            <ImageView
                android:id="@+id/video_call_me_evaluate"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px_32" />

            <TextView
                android:id="@+id/video_call_me_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_24"
                android:layout_marginRight="@dimen/px_24"
                android:layout_marginTop="@dimen/px_30"
                android:background="@color/setting_bg"
                android:padding="@dimen/px_24"
                android:text="很开心"
                android:textColor="@color/txt_color_666666" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_72"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/px_24"
                android:paddingRight="@dimen/px_24">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_weight="1.0"
                    android:background="#ffe6e6e6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_32"
                    android:layout_marginRight="@dimen/px_32"
                    android:text="他对我的评价"
                    android:textColor="@color/txt_color_999999"
                    android:textSize="@dimen/px_24" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/px_1"
                    android:layout_weight="1.0"
                    android:background="#ffe6e6e6" />
            </LinearLayout>

            <ImageView
                android:id="@+id/video_call_he_evaluate"
                android:layout_width="@dimen/px_44"
                android:layout_height="@dimen/px_44"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/px_32" />

            <TextView
                android:id="@+id/video_call_content_he"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_24"
                android:layout_marginRight="@dimen/px_24"
                android:layout_marginTop="@dimen/px_30"
                android:background="@color/setting_bg"
                android:padding="@dimen/px_24"
                android:text="很开心"
                android:textColor="@color/txt_color_666666" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>