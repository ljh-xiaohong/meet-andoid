<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/selector_bottom_bar_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_common_alert_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="18.0dip"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="18.0dip"
        android:text="红包最低限额为10"
        android:textColor="@android:color/black"
        android:textSize="15.5sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/divider_line_color" />

    <Button
        android:id="@+id/btn_common_alert_dialog_confirm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_bottom_bar_bg"
        android:paddingBottom="@dimen/dp_6"
        android:paddingTop="@dimen/dp_6"
        android:text="确定"
        android:textColor="@android:color/black"
        android:textSize="15.5sp" />
</LinearLayout>