<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_176"
        android:gravity="center_vertical">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/px_128"
            android:layout_height="@dimen/px_128"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/px_24"
            app:cardCornerRadius="@dimen/px_12"
            app:cardElevation="0.0dip">

            <ImageView
                android:id="@+id/item_approve_photo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_24"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/item_approve_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="颜如玉"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/px_32" />

                <TextView
                    android:id="@+id/item_approve_age"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8.0dip"
                    android:background="@drawable/shape_man"
                    android:drawableLeft="@drawable/selector_man"
                    android:gravity="center"
                    android:paddingLeft="@dimen/px_8"
                    android:paddingRight="@dimen/px_8"
                    android:text=" 23"
                    android:textColor="@color/white"
                    android:textSize="@dimen/px_24" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_32"
                android:text="申请加入宗祠"
                android:textColor="@color/txt_color_999999"
                android:textSize="@dimen/px_28" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_1"
        android:background="#ffeaeaea" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_68"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/item_no_pass"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_clan_approve_hulue"
                android:text=" 忽略"
                android:textColor="@color/txt_color_999999"
                android:textSize="@dimen/px_28" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/px_1"
            android:layout_height="@dimen/px_56"
            android:background="#ffe6e6e6" />

        <LinearLayout
            android:id="@+id/item_pass"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_clan_approve_tongguo"
                android:text=" 通过"
                android:textColor="#ff3a98db"
                android:textSize="@dimen/px_28" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>