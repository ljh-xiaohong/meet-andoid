<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f9f9f9">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_130"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/check_box_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_24"
            android:layout_marginRight="@dimen/px_30"
            android:button="@drawable/selector_choose_sex"
            android:checked="true"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="@dimen/px_118"
            android:layout_height="@dimen/px_118"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_24">

            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="@dimen/px_90"-->
                <!--android:layout_height="@dimen/px_90"-->
                <!--android:layout_gravity="center_vertical"-->
                <!--app:cardBackgroundColor="@color/white"-->
                <!--app:cardCornerRadius="@dimen/px_12"-->
                <!--app:cardElevation="0.0dip">-->

                <ImageView
                    android:id="@+id/img_michat_new_live_head"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_mess_dongtai" />
            <!--</android.support.v7.widget.CardView>-->

            <TextView
                android:id="@+id/message_dot"
                android:layout_width="@dimen/px_20"
                android:layout_height="@dimen/px_20"
                android:layout_marginTop="@dimen/px_12"
                android:layout_marginRight="@dimen/px_16"
                android:gravity="center"
                android:textSize="@dimen/px_20"
                android:maxLength="2"
                android:layout_gravity="right"
                android:background="@drawable/shape_badge_bg"
                android:visibility="visible"
                android:textColor="@color/white" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="10.0dip"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_message_private_chat_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="4.0dip"
                            android:gravity="center_vertical"
                            android:text="家族动态"
                            android:textColor="@color/color_black_333333"
                            android:textSize="@dimen/px_30"/>

                        <TextView
                            android:id="@+id/txt_message_private_chat_tiem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/px_24"
                            android:text="30分钟前"
                            android:textSize="12.0sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_message_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4.0dip"
                        android:gravity="center_vertical"
                        android:text="动态更新"
                        android:textColor="@color/txt_color_999999"
                        android:textSize="@dimen/px_26" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/px_24"
                        android:text="30分钟前"
                        android:textSize="12.0sp"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:background="@color/setting_bg"/>
</LinearLayout>