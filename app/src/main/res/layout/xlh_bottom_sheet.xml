<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#a1000000" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="140.0dip"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="96.0dip"
            android:background="#fff4f4f4"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="27.0dip"
            android:paddingRight="27.0dip">

            <LinearLayout
                android:id="@+id/xinlihua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_margin="2.0dip"
                    android:orientation="vertical"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip">

                    <ImageView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/xinlihua" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="心里话"
                    android:textColor="#ffa5a5a5"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jinbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_margin="2.0dip"
                    android:orientation="vertical"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip">

                    <ImageView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/jinbi" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="金币"
                    android:textColor="#ffa5a5a5"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/liwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_margin="2.0dip"
                    android:orientation="vertical"
                    app:cardCornerRadius="10.0dip"
                    app:cardElevation="2.0dip">

                    <ImageView
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_gravity="center"
                        android:src="@mipmap/liwu" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4.0dip"
                    android:text="礼物"
                    android:textColor="#ffa5a5a5"
                    android:textSize="12.0sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0"
            android:background="#ffffffff"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff333333" />
    </LinearLayout>
</FrameLayout>