<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_vip_permission_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/icon_poster_sel" />

    <TextView
        android:id="@+id/tv_vip_permission_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="开通发布活动"
        android:textSize="12sp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/tv_vip_permission_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radiu_buy_vip_time"
        android:text="剩余12天"
        android:textSize="12sp"
        android:textColor="#D09B21" />

</LinearLayout>

