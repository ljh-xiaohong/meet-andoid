<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/activity_poster_open_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_9"
        android:text="@string/poster_open_vip"
        android:textColor="#BE3232"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/activity_poster_experience"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_below="@+id/activity_poster_open_vip"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_12"
        android:background="@drawable/bg_poster_btn"
        android:gravity="center"
        android:text="@string/poster_experience"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_17" />

</RelativeLayout>