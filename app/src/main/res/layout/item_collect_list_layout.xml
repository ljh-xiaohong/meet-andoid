<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_clan_title"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_96"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/px_6"
                android:layout_height="@dimen/px_40"
                android:background="@color/color_ab3a34" />

            <TextView
                android:id="@+id/txt_mi_clan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_18"
                android:text="@string/clan_text_1"
                android:textColor="@color/color_black_333333"
                android:textSize="@dimen/px_30"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/setting_bg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/px_24"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_collect_photo"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_300"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/item_collcst_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="@dimen/px_400"
                        android:minLines="1"
                        android:ellipsize="end"
                        android:text="梁家"
                        android:textColor="@color/color_black_333333"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/item_colect_build"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_16"
                        android:text="筹建中..."
                        android:textColor="#3498db"
                        android:textSize="@dimen/px_28"
                        android:visibility="gone" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_1"
                        android:layout_weight="1.0" />

                    <TextView
                        android:id="@+id/item_collect_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_26"
                        android:drawableLeft="@drawable/selector_zuci_collect_top_img"
                        android:gravity="center_vertical"
                        android:text=" 已置顶"
                        android:textColor="@color/txt_color_999999"
                        android:textSize="@dimen/px_24" />

                    <TextView
                        android:id="@+id/item_zuci_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_26"
                        android:drawableLeft="@drawable/selector_zuci_collect_choose"
                        android:gravity="center_vertical"
                        android:text=" 已收藏"
                        android:textColor="@color/txt_color_999999"
                        android:textSize="@dimen/px_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_collcst_loation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_zongqinhui_txt_bg"
                        android:drawableLeft="@mipmap/ic_loaction_dingwei"
                        android:gravity="center"
                        android:paddingLeft="@dimen/px_13"
                        android:paddingRight="@dimen/px_13"
                        android:text="19.22km" />

                    <TextView
                        android:id="@+id/item_collcst_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_6"
                        android:background="@drawable/shape_zongqinhui_txt_bg"
                        android:paddingLeft="@dimen/px_13"
                        android:paddingRight="@dimen/px_13"
                        android:text="19.22人"
                        android:textColor="@color/color_ab3a34"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/banding_zuci"
                android:layout_width="@dimen/px_120"
                android:layout_height="@dimen/px_56"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_24"
                android:textColor="@color/selector_zuci_banding_text"
                android:background="@drawable/shape_button_zuci_binding_bg"
                android:text="绑定"
                android:visibility="gone"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>