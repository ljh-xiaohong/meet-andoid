<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.FamilyTree.TreeTagActivity">
    <include
        layout="@layout/titlebar_layout"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_88"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/px_58"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginRight="@dimen/px_30"
            android:background="@drawable/shape_search_title_bar"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingEnd="12.0dip"
            android:paddingStart="12.0dip">

            <ImageView
                android:id="@+id/search_all"
                android:layout_width="24.0dip"
                android:layout_height="24.0dip"
                android:background="@drawable/selector_title_bar_back"
                android:src="@mipmap/ic_search"
                android:visibility="visible" />

            <com.yuejian.meet.widgets.CleanableEditText
                android:id="@+id/et_search_all"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:minWidth="@dimen/px_200"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="12.0dip"
                android:background="@color/white"
                android:hint="@string/treeadd_name6"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/praise_item_default"
                android:textSize="@dimen/px_28"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/tree_layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:text="@string/treeadd_name14"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/setting_bg"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"/>
                <com.yuejian.meet.widgets.InnerGridView
                    android:id="@+id/tree_grid1"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tree_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:text="@string/treeadd_name28"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/setting_bg"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"/>
                <com.yuejian.meet.widgets.InnerGridView
                    android:id="@+id/tree_grid2"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tree_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:text="@string/treeadd_name29"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/setting_bg"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"/>
                <com.yuejian.meet.widgets.InnerGridView
                    android:id="@+id/tree_grid3"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tree_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:text="@string/treeadd_name30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/setting_bg"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"/>
                <com.yuejian.meet.widgets.InnerGridView
                    android:id="@+id/tree_grid4"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/tree_layout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:textColor="@color/color_232323"
                    android:text="@string/treeadd_name31"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/setting_bg"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"/>
                <com.yuejian.meet.widgets.InnerGridView
                    android:id="@+id/tree_grid5"
                    android:numColumns="4"
                    android:verticalSpacing="@dimen/px_30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/px_30"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>