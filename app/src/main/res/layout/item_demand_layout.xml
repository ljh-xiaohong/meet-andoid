<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- 封面人物 item -->

    <LinearLayout
        android:id="@+id/item_demand_layout_top"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_12"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_23"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_demand_layout_top_date"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center"
            android:textColor="#3C77BB"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/item_demand_layout_top_img"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_80"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5.5"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10">

                <TextView
                    android:id="@+id/item_demand_layout_top_info"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center|left"
                    android:maxLines="2"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/item_demand_layout_top_status"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:maxLines="1"

                    android:textColor="@color/txt_color_666666"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <!-- 热门社群 -->
    <RelativeLayout
        android:id="@+id/item_demand_layout_chatgroup"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:visibility="gone">

        <com.yuejian.meet.widgets.CircleImageView
            android:id="@+id/item_demand__hottalk_img"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/user_account_pictures" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_demand__hottalk_img"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_demand__hottalk_groupname"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|bottom"
                    android:text="XXXXXX群"
                    android:textColor="@color/color_black_333333"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/item_demand__hottalk_people"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="left|bottom"
                    android:text="(0人)"
                    android:textColor="@color/color_507DAF"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>


            <TextView
                android:id="@+id/item_demand__hottalk_master"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="群主："
                android:textColor="@color/color_494949"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


    </RelativeLayout>

    <!-- 热门名帖 -->
    <RelativeLayout
        android:id="@+id/item_demand_layout_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:visibility="gone">

        <com.yuejian.meet.widgets.CircleImageView
            android:id="@+id/item_demand__hittip_img"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/user_account_pictures" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_demand__hittip_img"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_demand__hittip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="李易"
                        android:textColor="@color/color_black_333333"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/item_demand__hittip_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="结识宗亲 | 商务合作"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/item_demand__hittip_statuscount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/icon_shagnquan_yxl"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:text="@string/business_affect"
                        android:textColor="@color/color_E67838" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/item_demand__hittip_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@mipmap/tab_shangquan_position"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_2"
                        android:text="广东 珠海"
                        android:textColor="@color/txt_color_999999" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/vive_colors_wire_e6e6e6" />

</RelativeLayout>