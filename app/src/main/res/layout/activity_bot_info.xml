<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.home.BotInfoActivity">
    <include
        layout="@layout/titlebar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="@dimen/px_30"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="@dimen/px_110"
                    android:layout_height="@dimen/px_110"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_mine_card_bg"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="3.0dip"
                    app:cardElevation="0.0dip">
                <ImageView
                    android:id="@+id/bot_info_logo"
                    android:layout_width="@dimen/px_110"
                    android:layout_height="@dimen/px_110"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_default"/>
                </android.support.v7.widget.CardView>
                <TextView
                    android:id="@+id/bot_info_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_232323"
                    android:layout_marginTop="@dimen/px_30"
                    android:textSize="@dimen/px_30"
                    android:layout_gravity="center_horizontal"
                    android:text="约见科技"/>
                <TextView
                    android:id="@+id/bot_info_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_color_999999"
                    android:layout_marginTop="@dimen/px_20"
                    android:textSize="@dimen/px_30"
                    android:layout_gravity="center_horizontal"
                    android:text="约见科技"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/px_20"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/ch_1"
                        android:layout_width="@dimen/px_112"
                        android:layout_height="@dimen/px_36"
                        android:textColor="#c69c6d"
                        android:textSize="@dimen/px_22"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/selector_action_type_item_btn"
                        android:text="约见科技"/>
                    <TextView
                        android:id="@+id/ch_2"
                        android:layout_width="@dimen/px_112"
                        android:layout_height="@dimen/px_36"
                        android:textColor="#c69c6d"
                        android:textSize="@dimen/px_22"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/selector_action_type_item_btn"
                        android:text="约见科技"
                        android:visibility="gone"/>
                    <TextView
                        android:id="@+id/ch_3"
                        android:layout_width="@dimen/px_112"
                        android:layout_height="@dimen/px_36"
                        android:textColor="#c69c6d"
                        android:textSize="@dimen/px_22"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/selector_action_type_item_btn"
                        android:text="约见科技"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:textSize="@dimen/px_30"
                android:textColor="@color/color_232323"
                android:background="@color/white"
                android:padding="@dimen/px_30"
                android:text="@string/brief_introduction"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_1"
                android:padding="@dimen/px_30"
                android:background="@color/white">
                <TextView
                    android:id="@+id/bot_info_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_232323"
                    android:textSize="@dimen/px_28"
                    android:text="简介内容"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/job_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/px_30"
                android:background="@color/white"
                android:layout_marginTop="@dimen/px_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/px_30"
                        android:layout_weight="1"
                        android:textColor="@color/color_232323"
                        android:text="@string/bot_txt_3"/>
                    <TextView
                        android:id="@+id/tet_site"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/px_6"
                        android:textColor="@color/txt_color_999999"
                        android:textSize="@dimen/px_28"
                        android:text="公司地址"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/bot_info_ta_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_10"
                android:padding="@dimen/px_30"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="@dimen/px_104"
                        android:layout_height="@dimen/px_104"
                        android:background="@drawable/shape_mine_card_bg"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="3.0dip"
                        app:cardElevation="0.0dip">
                    <ImageView
                        android:id="@+id/user_photo"
                        android:layout_width="@dimen/px_104"
                        android:layout_height="@dimen/px_104"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_default"/>
                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/px_104"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/px_30"
                            android:textColor="@color/color_232323"
                            android:text="名字"/>
                        <TextView
                            android:id="@+id/bot_info_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/px_30"
                            android:textColor="@color/color_232323"
                            android:text="2018-10-10"/>

                    </LinearLayout>
                    <Button
                        android:id="@+id/bot_info_attention"
                        android:layout_width="@dimen/px_144"
                        android:layout_height="@dimen/px_50"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/px_22"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_focus_btn"
                        android:enabled="true"
                        android:text="@string/bot_txt_4" />

                </LinearLayout>

                <Button
                    android:id="@+id/bu_chat"
                    android:layout_width="@dimen/px_400"
                    android:layout_height="@dimen/px_58"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/px_30"
                    android:textColor="@color/color_white"
                    android:background="@drawable/shape_button_dd362b"
                    android:enabled="true"
                    android:text="@string/bot_txt_5" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_30"/>

        </LinearLayout>
    </ScrollView>
<LinearLayout
    android:id="@+id/bot_info_bot_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_98">
    <TextView
        android:id="@+id/edit_but"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/px_32"
        android:gravity="center"
        android:textColor="@color/txt_color_999999"
        android:background="@color/white"
        android:layout_weight="1"
        android:text="@string/bot_txt_6"/>
    <TextView
        android:id="@+id/del_but"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/px_32"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/color_dd362b"
        android:layout_weight="1"
        android:text="@string/swipe_delete"/>
</LinearLayout>
</LinearLayout>