<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="290.0dip"
    android:layout_height="350.0dip">

    <android.support.v7.widget.CardView
        android:layout_width="290.0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="2.0dip"
        android:orientation="vertical"
        app:cardCornerRadius="8.0dip"
        app:cardElevation="0.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="fill_parent"
                android:layout_height="290.0dip"
                android:src="@mipmap/fengjing" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="4.0dip"
                android:paddingRight="4.0dip">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff232323"
                    android:textSize="23.0sp" />

                <TextView
                    android:id="@+id/person_age"
                    android:layout_width="52.0dip"
                    android:layout_height="24.0dip"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8.0dip"
                    android:background="@drawable/shape_man"
                    android:drawableStart="@drawable/selector_man"
                    android:gravity="center"
                    android:paddingLeft="4.0dip"
                    android:paddingRight="4.0dip"
                    android:textColor="@color/white"
                    android:textSize="20.0sp" />

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="1.0px"
                    android:layout_weight="1.0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15.0dip"
                        android:layout_height="15.0dip"
                        android:layout_marginEnd="2.0dip"
                        android:src="@mipmap/ic_positon" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ff999999"
                        android:textSize="20.0sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>