<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <!-- 文章 dp_256 -->

    <com.yuejian.meet.widgets.CircleViewGroup
        android:id="@+id/item_recommend_article_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/item_recommend_article_img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_172"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/label_home_article" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_recommend_article_img"
                android:background="#ffffff"
                android:orientation="vertical"
                android:padding="@dimen/dp_8">


                <TextView
                    android:id="@+id/item_recommend_article_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="#FF333333"
                    android:paddingBottom="@dimen/dp_8"
                    android:textSize="@dimen/sp_14" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/item_recommend_article_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_toLeftOf="@+id/item_recommend_article_like"
                        android:drawableLeft="@mipmap/icon_home_tab_two"
                        android:drawablePadding="@dimen/dp_4"
                        android:ellipsize="end"
                        android:gravity="left|center"
                        android:maxLines="1"
                        android:textSize="@dimen/sp_12" />

                    <TextView

                        android:id="@+id/item_recommend_article_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:drawableLeft="@mipmap/icon_zan_nor"
                        android:drawablePadding="@dimen/dp_4"
                        android:gravity="center"
                        android:textSize="@dimen/sp_13" />
                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>


    </com.yuejian.meet.widgets.CircleViewGroup>

    <!-- 视频（竖屏） dp_278 -->

