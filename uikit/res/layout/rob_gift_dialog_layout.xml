<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/shape_gift_dialog_code_window_bg"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="35dp">

                <ImageView
                    android:id="@+id/img_rob_gift_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_default" />

            <ImageView
                android:id="@+id/img_rob_faqr"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_shi" />
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_rob_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="梁"/>
        <TextView
            android:id="@+id/txt_rob_gift_family_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:text="欢迎进入梁氏家族"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="#e59936"/>

        <RelativeLayout
            android:layout_width="68dp"
            android:layout_height="72dp"
            android:layout_marginTop="29dp">
            <View
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:background="@drawable/shape_gift_dialog_circle_bg"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:id="@+id/img_gift_photo"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:scaleType="fitXY"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_rob_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:text="红玫瑰"/>

        <TextView
            android:id="@+id/txt_rob"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:layout_marginTop="29dp"
            android:background="@drawable/shape_gift_rob_button_bg"
            android:text="抢礼物"/>
    </LinearLayout>
</LinearLayout>
