<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/gift_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider_line_color" />

        <android.support.v4.view.ViewPager
            android:id="@+id/gift_vpager_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#cc000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            android:background="@color/black"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/divider_line_color"
                android:visibility="gone" />

            <com.netease.nim.uikit.app.widgets.ChatGiftIndicatorView
                android:id="@+id/ll_point_group"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#000000"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gift_cnt_dialog"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#434343"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/cnt_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white" />

            <View
                android:layout_width="1px"
                android:layout_height="36dp"
                android:background="#2f2f2f" />

            <TextView
                android:id="@+id/cnt_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="10"
                android:textColor="@color/white" />

            <View
                android:layout_width="1px"
                android:layout_height="36dp"
                android:background="#2f2f2f" />

            <TextView
                android:id="@+id/cnt_66"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="66"
                android:textColor="@color/white" />

            <View
                android:layout_width="1px"
                android:layout_height="36dp"
                android:background="#2f2f2f" />

            <TextView
                android:id="@+id/cnt_99"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/white" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#2f2f2f" />

            <TextView
                android:id="@+id/cnt_188"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="188"
                android:textColor="@color/white" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#2f2f2f" />

            <TextView
                android:id="@+id/cnt_520"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="520"
                android:textColor="@color/white" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#2f2f2f" />

            <TextView
                android:id="@+id/cnt_1314"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="true"
                android:gravity="center"
                android:text="1314"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="38.5dp"
            android:background="#000000"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/gift_ll_recharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gift_tv_recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="去充值"
                    android:textColor="@color/title_background_color"
                    android:textSize="12sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@mipmap/ic_gift_incash_more" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_number_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="1000"
                    android:textColor="@color/title_background_color"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:src="@mipmap/icon_money" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#525252" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/father"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <requestFocus />

                    <ImageView
                        android:id="@+id/gift_cnt_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="13dp"
                        android:src="@mipmap/ic_gift_cnt_pull" />

                    <EditText
                        android:id="@+id/gift_cnt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingLeft="12dp"
                        android:maxLength="8"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#525252" />
            </RelativeLayout>


            <TextView
                android:id="@+id/gift_tv_czpay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F8B053"
                android:focusable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="送出礼物"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
